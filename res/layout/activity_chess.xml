<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bbdr.chess.ChessActivity" 
    android:baselineAligned="false"
    android:background="@drawable/grassbg">

    <RelativeLayout
        android:id="@+id/chessboardLayout"
        android:layout_width="280dp"
        android:layout_height="280dp" 
        android:layout_centerInParent="true">
        
        <ImageView
            android:id="@+id/chessboard"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="The Chess Board"
            android:src="@drawable/tempchessboard" />
            
        <com.bbdr.chess.ChessBoardView
            android:id="@+id/chessboardView"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    
</RelativeLayout>
